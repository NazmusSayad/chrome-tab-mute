{
  "manifest_version": 3,
  "name": "Chrome Tab Mute",
  "version": "1.0",
  "description": "Mute or unmute tabs with one click",
  "permissions": ["tabs", "contextMenus", "storage", "offscreen"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "dist/index.js"
  },
  "icons": {
    "128": "dist/images/active-128.png"
  },
  "action": {
    "default_title": "Mute/Unmute Tab",
    "default_icon": "dist/images/normal-white-128.png"
  },

  "web_accessible_resources": [
    {
      "resources": ["dist/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
